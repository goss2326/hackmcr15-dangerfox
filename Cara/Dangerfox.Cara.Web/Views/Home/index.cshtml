        <span>Please Enter Your Mobile Number For Added Fun:</span>
        <input type="tel" id="mobile-number" name="mobileNumber" />
    </p>
    <p id="message">@ViewBag.ErrorMessage</p>
    
    <button type="submit" value="Let's Play!">Let's Play!</button>
</form>
